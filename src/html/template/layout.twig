{% set version = '1.5' %}
{% set var = {
  'about': { 'url': '/#about', 'name': 'О HOMS' },
  'services': { 'url': '/services.html', 'name': 'УСЛУГИ' },
  'base': { 'url': '/knowledge-base.html', 'name': 'БАЗА ЗНАНИЙ' },
  'contacts': { 'url': '/#contacts', 'name': 'КОНТАКТЫ' },
  'lk': { 'url': 'https://usali.pro', 'name': 'ЛИЧНЫЙ КАБИНЕТ' },
} %}
<!DOCTYPE html>
<html lang="ru"{{ htmlClass }}>
<head>
  <meta charset="utf-8">
  <title>{{ metaTitle|default(title) }}</title>
  <meta name="description" content="{{ description|default('') }}">

  <meta content="ie=edge" http-equiv="x-ua-compatible">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta content="telephone=no" name="format-detection">

  <link rel="stylesheet" href="/css/styles.css?ver={{ version }}">
  {% if STYLESHEET %}
    <link rel="stylesheet" href="css/{{ STYLESHEET }}.css?ver={{ version }}">
  {% endif %}

  <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png">
  <link rel="manifest" href="/assets/favicon/webmanifest.json">
  <link rel="mask-icon" href="/assets/favicon/safari-pinned-tab.svg" color="#0154b2">
  <link rel="shortcut icon" href="/assets/favicon/favicon.ico">
  <meta name="msapplication-TileColor" content="#0154b2">
  <meta name="msapplication-config" content="/assets/favicon/browserconfig.xml">
  <meta name="theme-color" content="#0154b2">
</head>
<body>
<div id="root">
<!-- Begin: navbar -->
{% include 'navbar.twig' %}
<!-- End: navbar -->

{% block header %}
  <!-- Begin: header -->
  {% include 'header.twig' with {isMainPage} %}
  <!-- End: header -->
{% endblock %}

<!-- Begin: container -->
<main class="{{ mainClass|default('container') }}">
  {% block content %}{% endblock %}
</main>
<!-- End: container -->

{% block footer %}
  <!-- Begin: contacts -->
  {% include '../template/contacts.twig' %}
  <!-- End: contacts -->

  <!-- Begin: footer -->
  {% include '../template/footer.twig' %}
  <!-- End: footer -->
{% endblock %}

  <!-- Begin: Modals -->
  {% include '../components/c-modal.twig' %}
  <!-- Begin: Modals -->

  <!-- Begin: Support -->
  {% include '../components/support.twig' %}
  <!-- Begin: Support -->

  <div class="go-top js-go-top js-goto" data-goto="#header">
    <svg class="go-top__arrow"><use href="/assets/img/icons.svg#triangle"></use></svg>
  </div>
</div>
<script src="/js/main.scripts.js?ver={{ version }}"></script>
</body>
</html>
